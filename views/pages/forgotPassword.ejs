<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search your account</title>
    <link rel="stylesheet" href="/css/login.css" />
</head>

<body>
    <header>
        <div class="head">
            <img src="https://assets.pharmeasy.in/web-assets/dist/fca22bc9.png" alt="logo" />
        </div>
        <div class="headright">
            <img src="https://assets.pharmeasy.in/web-assets/dist/1fe1322a.svg" alt="logo2" />
        </div>
    </header>

    <div class="login">
        <p>Forgot password</p>
    </div>

    <!-- Error Message Popup -->
    <div id="error-popup" class="popup" style="display: none;">
        <p id="popup-message"></p>
        <button onclick="closePopup()">OK</button>
    </div>

    <!-- Login Form -->
    <form id="entry" action="/users/forgot-password" method="POST">
        <label for="num">Email</label>
        <input type="email" id="num" name="email" placeholder="Enter your Email" required />

        <button type="submit" class="go">Search</button>
    </form>

    <div class="foot">
        Don't have an account? <a href="/users/signup" style="color: #0f8a65; font-weight: bold;">Sign up</a>
    </div>

    <div class="divider">
        <span>OR</span>
    </div>

    <div class="social-login">
        <button class="google-btn" onclick="location.href='/auth/google'">
            <img src="https://img.icons8.com/?size=100&id=17949&format=png&color=000000" width="20px" alt="Google" />
            Continue with Google
        </button>
        <button class="facebook-btn" onclick="location.href='/auth/facebook'">
            <img src="https://upload.wikimedia.org/wikipedia/commons/0/05/Facebook_Logo_%282019%29.png" width="20px"
                alt="Facebook" />
            Continue with Facebook
        </button>
    </div>

    <div class="foot">
        By clicking continue, you agree with our <a href="/privacy-policy">Privacy Policy</a>
    </div>
</body>

</html>

<script src="/js/admin_page.js"></script>

<script>

    document.addEventListener("DOMContentLoaded", function () {

        // ðŸ”¹ Check for error message in URL
        const urlParams = new URLSearchParams(window.location.search);
        const errorMessage = urlParams.get("error");
        if (errorMessage) {
            showPopup(decodeURIComponent(errorMessage), "red", "white", "/users/forgot-password");
        }

        // ðŸ”¹ Show EJS-based Popup Messages
        const showPopupMessage = JSON.parse(`<%- JSON.stringify(showPopup) %>`);
        if (showPopupMessage) {
            showPopup("<%= message %>", "<%= bgcolor || 'grey' %>", "<%= color || 'white' %>", "/users/forgot-password");
        }
    });
</script>