<!DOCTYPE html>
<html lang="en">

<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/admin_page.css">
</head>

<body>
    <!-- Admin Sidebar -->
    <%- include('./partials/sidebar') %>

        <div class="main-content">
            <!-- Users List -->
            <div class="mt-4">
                <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 20px;">
                    <h3>All Categories</h3>
                    <a href="/admin/add-category/1111"
                        style="padding: 4px 20px; background-color: red; text-decoration: none; color: white;">Add
                        Category</a>
                </div>
                <table class="table table-bordered table-striped">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>CATEGORY NAME</th>
                            <th>IMAGE</th>
                            <th>DISCOUNT</th>
                            <th>CREATED AT</th>
                            <th>UPDATED AT</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category=> { %>
                            <tr>
                                <td>
                                    <%= category.name %>
                                </td>
                                <td>
                                    <img src="<%= category.image %>" alt="Category Image"
                                        style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;">
                                </td>
                                <td>
                                    <%= category.discount ? category.discount + '%' : 'N/A' %>
                                </td>
                                <td>
                                    <%= new Date(category.createdAt).toLocaleString() %>
                                </td>
                                <td>
                                    <%= new Date(category.updatedAt).toLocaleString() %>
                                </td>
                                <td>
                                    <a href="/admin/edit-category/<%= category._id %>/1111"
                                        class="btn btn-sm btn-warning">Edit</a>
                                    <a href="/admin/delete-category/<%= category._id %>/1111"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

</body>

</html>